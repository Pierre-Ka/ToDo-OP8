{% extends 'base.html.twig' %}

{% block header_img %}<img class="slide-image" src="{{ asset('img/todolist_content.jpg') }}" alt="todo list">{% endblock %}

{% block body %}
<div class="m-3">
    <a href="{{ path('homepage') }}" class="btn btn-secondary ">Retour à la page d'accueil</a>
    <a href="{{ path('task_create') }}" class="btn btn-info">Créer une tâche</a>
</div>

    <div class="row">
        {% for task in tasks %}
        <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="thumbnail border border-primary rounded p-4 m-4">
                <div class="caption">

                    <div class="row">
                        <h4 class="col-10" ><a href="{{ path('task_edit', {'id' : task.id }) }}">{{ task.title }}</a></h4>
                        <span class="col-2">
                        {% if task.isDone %}
                            <i class="fa fa-check fa-lg" aria-hidden="true"></i>
                        {% else %}
                            <i class="fa fa-times fa-lg" aria-hidden="true"></i>
                        {% endif %}
                    </span>
                    </div>


                    <p>{{ task.content }}</p>
                    {% if task.user is same as null %}
                        <p> Par : Anonyme </p>
                    {% else %}
                        <p> Par : {{ task.user.username }}</p>
                    {% endif %}
                </div>
                <div class="row">
                    <div class="col-8">
                        <form action="{{ path('task_toggle', {'id' : task.id }) }}">
                            <button class="btn btn-success btn-sm pull-right">
                                {% if not task.isDone %}
                                                Marquer comme faite
                                {% else %}
                                                Marquer non terminée
                                {% endif %}
                            </button>
                        </form>
                    </div>

{#                    {% if task.user is same as null and is_granted('ROLE_ADMIN') %}#}
                    {% if is_granted('delete', task) %}
                    <div class="col-4">
                        <form action="{{ path('task_delete', {'id' : task.id }) }}">
                            <button class="btn btn-danger btn-sm pull-right">Supprimer</button>
                        </form>
                    </div>
{#                    {% elseif task.user is same as app.user %}#}
{#                        <div class="col-4">#}
{#                            <form action="{{ path('task_delete', {'id' : task.id }) }}">#}
{#                                <button class="btn btn-danger btn-sm pull-right">Supprimer</button>#}
{#                            </form>#}
{#                        </div>#}
                    {% endif %}
                </div>
            </div>
        </div>
        {% else %}
            <div class="alert alert-warning" role="alert">
                Il n'y a pas encore de tâche enregistrée. <a href="{{ path('task_create') }}" class="btn btn-warning pull-right">Créer une tâche</a>
            </div>
        {% endfor %}
    </div>
{% endblock %}
